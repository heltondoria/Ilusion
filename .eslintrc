{
    "extends": [
        "standard",
        "prettier",
        "prettier/standard",
        "plugin:security/recommended",
        "plugin:node/recommended"
    ],
    "plugins": [
        "import",
        "prettier",
        "security",
        "standard",
        "mocha"
    ],
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "rules": {
        "space-before-function-paren": 0,
        "new-cap": 0,
        "prettier/prettier": 2,
        "mocha/no-exclusive-tests": "error"
    }
}
